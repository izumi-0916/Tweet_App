<div class="main-content">
  <%= form_with(url: search_searches_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
  <% @tweets.each do |tweet| %>
    <div class="tweet">
      <div class="name-box">
        <a class="name-box-name" href="/users/<%= tweet.user.id %>">
          <%= tweet.user.nickname %>
        </a>
        <div class="name-box-date"><%= tweet.created_at.strftime("%Y年%m月%d日 %H:%M")%></div>
      </div>
      <div class="tweet-text">
        <div class="image">
          <% if tweet.image? %>
            <%= image_tag tweet.image.url, :size =>'680x500' %>
          <% end %>
        </div>
        <div class="text"> <%= simple_format(tweet.text) %></div>
      </div>
      <div class="item-box">
        <div class="item-box-icon">
          <div class="comment">
            <a href="/tweets/<%=tweet.id%>"><i class="far fa-comment fa-lg" style="color:black;"></i></a>
          </div>
          <%= tweet.comments.size %>
          <% if user_signed_in? %>
            <div class="heart">
              <% if tweet.likes.find_by(user_id:current_user.id) %>
                <label class="like">
                <i class="fas fa-heart fa-lg"></i>
                <div class="iine"><%= button_to 'いいねを取り消す', "/tweets/#{tweet.id}/likes/id" , method: :delete %></div>
                </label>
              <% else %>
                <label class="unlike">
                <i class="far fa-heart fa-lg"></i>
                <div class="iine"><%= button_to 'いいね', "/tweets/#{tweet.id}/likes"  %></div>
                </label>
              <% end %>
              <%= tweet.likes.size %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>