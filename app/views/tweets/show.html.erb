<div class="main-content">
  <div class="tweet">
    <div class="name-box">
      <a class="name-box-name" href="/users/<%= @tweet.user.id %>">
          <%= @tweet.user.nickname %>
      </a>
      <div class="name-box-date"><%= @tweet.created_at.strftime("%Y-%m-%d %H:%M")%></div>
      <div class="more">
      </div>
    </div>
    <div class="tweet-text">
      <div class="image">
        <% if @tweet.image? %>
          <%= image_tag @tweet.image.url, :size =>'410x300' %>
        <% end %>
      </div>
      <div class="text"> <%= simple_format(@tweet.text) %></div>
    </div>
  </div>
  <div class="comment-content">
    <div class="comment-box">
      <% if current_user %>
        <%= form_with(model: [@tweet, @comment], local: true, id: "new-comment") do |form| %>
          <%= form.text_area :text, placeholder: "コメントする", rows: "2", class: "comment-text" %>
          <%= form.submit "送信",class: "comment-btn" %>
        <% end %>
      <% else %>
        <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
      <% end %>

      <div class="comments">
        <h4>＜コメント一覧＞</h4>
        <% if @comments %>
          <% @comments.each do |comment| %>
            <p>
              <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
              <%= comment.text %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>